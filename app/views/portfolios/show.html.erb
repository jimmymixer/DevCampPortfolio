<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image, width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1>Title: <%= @portfolio_item.title %></h1>

      <hr>

      <em>Subtitle: <%= @portfolio_item.subtitle %></em>

      <p>Body: <%= @portfolio_item.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>

    </div>
  </div>
</div>
